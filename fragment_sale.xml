<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="智能果蔬结账"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_marginTop="50dp"
        android:id="@+id/img"/>

    <TextView
        android:id="@+id/t_jg"
        android:textSize="25sp"
        android:text="价格"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/jiage"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/jiage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toRightOf="@+id/t_jg"
        app:layout_constraintRight_toRightOf="parent"
        android:text="0"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/b_huoqu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_jg"
        app:layout_constraintRight_toLeftOf="@+id/b_qingling"
        android:layout_marginTop="100dp"
        android:text="获取" />

    <Button
        android:id="@+id/b_qingling"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jiage"
        android:layout_marginTop="100dp"
        android:text="清零" />

    <Button
        android:id="@+id/b_jiezhang"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jiage"
        app:layout_constraintLeft_toRightOf="@+id/b_qingling"
        android:layout_marginTop="100dp"
        android:text="结账" />

</androidx.constraintlayout.widget.ConstraintLayout>
